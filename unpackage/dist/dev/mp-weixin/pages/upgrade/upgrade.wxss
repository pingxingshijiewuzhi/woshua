	/* border */
.upborder {
		position: fixed;
		background-color: #FFFFFF;
		top:0;
		left:0;
		right:0;
		z-index: 999;
		height: 100rpx;
}
.underborder {
		width: 100%;
		height: 100rpx;
}
.border_list {
		width: 20%;
		/* line-height: 120rpx; */
		line-height: 100rpx;
		text-align: center;
		font-size: 32rpx;
}
.border_lists {
		color: #5C81F7;
		border-bottom: #5C81F7 solid 1rpx;
}
