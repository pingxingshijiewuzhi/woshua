/* barner */
.barner {
	width: 100%;
	height: 380rpx;
	background-color: #FFFFFF;
	margin-top: 30rpx;
	padding: 0 30rpx;
	position: relative;
}
.barner_border {
	width: 96%;
	margin: 0 2%;
	height: 260rpx;
	border-bottom: solid 1rpx #E5E5E5;
	position: relative;
}
.border_top {
	width: 380rpx;
	height: 120rpx;
	letter-spacing: 2rpx;
}
.barder_left {
	font-size: 32rpx;
	font-weight: 600;
	margin-right: 40rpx;
	color: #363636;
	letter-spacing: 6rpx;
}
.barder_right {
	font-size: 32rpx;
	font-weight: 600;
	color: #363636;
	letter-spacing: 6rpx;
	margin-top: 8rpx;
}
.barder_last {
	font-size: 30rpx;
	margin-top: 10rpx;
	color: #5E5E5E;
}
.border_left {
	margin-left: 30rpx;
}
.border_num {
	height: 40rpx;
	margin-top: 24rpx;
	color: #434343;
}
.border_next {
	color: #D8120F;
	font-size: 36rpx;
}
.border_number {
	line-height: 50rpx;
	position: absolute;
	right: 0;
	bottom: 40rpx;
}
.libao {
	width: 180rpx;
	height: 170rpx;
}
.barner_last {
	line-height: 120rpx;
	color: #434343;
}

/* center */
.center {
	width: 100%;
	height: 360rpx;
	background-color: #FFFFFF;
	margin-top: 30rpx;
	padding: 10rpx 40rpx;
	line-height: 60rpx;
	font-size: 30rpx;
	color: #434343;
}
.button {
	width: 100%;
	line-height: 100rpx;
	text-align: center;
	position: absolute;
	bottom: 0;
}
.button_left {
	width: 50%;
	background-color: #FFFFFF;
	color: #424242;
}
.button_right {
	width: 50%;
	background-color: #5A7EF8;
	color: #FFFFFF;
}

/* MODEL */
.cu-dialog {
	border-radius: 20rpx;
}
.button_color {
	width: 680rpx;
	height: 260rpx;
	background-color: #FFFFFF;
}
.button_top {
	width: 680rpx;
	line-height: 130rpx;
