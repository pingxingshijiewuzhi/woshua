
.box {
	width: 100vw;
	height: 100vh;
	background-color: #F2F2F2;
	overflow: hidden;
}
.border {
	width: 100%;
	height: 100rpx;
	font-size: 34rpx;
	padding-left: 30rpx;
	background-color: #FFFFFF;
	margin-top: 30rpx;
	letter-spacing: 2rpx;
}
.barner {
	width: 94%;
	height: 80rpx;
	margin: 30rpx 3%;
	border-radius: 50rpx 50rpx;
	color: #97A6EA;
	background-color: #FFFFFF;
	font-size: 30rpx;
	letter-spacing: 2rpx;
}
.bottom {
	width: 100%;
	height: 260rpx;
	background-color: #FFFFFF;
	line-height: 42rpx;
	padding: 14rpx 20rpx;
	letter-spacing: 4rpx;
}

