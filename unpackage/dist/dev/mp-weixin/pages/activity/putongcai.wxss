
page {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.box {
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	background-image: url(/static/image/bg_cg@2x.png);
	background-size: 100% 100%;
	background-repeat: no-repeat;
}
.border {
	width: 100%;
	height: 80rpx;
	padding: 30rpx 20rpx;
}
.border_image {
	width: 40rpx;
	height: 30rpx;
	margin-left: 4rpx;
}
.border_text {
	width: 400rpx;
	line-height: 110rpx;
	text-align: center;
	font-size: 32rpx;
	color: #FCFFFC;
	margin-left: 15%;
	margin-top: 8rpx;
	font-weight: 500;
}
.center {
	width: 90%;
	height: 48%;
	margin: 0 5%;
	background-color: #FFFFFF;
	border-radius: 20rpx 20rpx;
	line-height: 46rpx;
	padding: 56rpx 20rpx;
	font-size: 30rpx;
	position: relative;
	position: absolute;
	bottom: 70rpx;
	font-size: 28rpx;
}
.center_top {
	width: 420rpx;
	line-height: 70rpx;
	text-align: center;
	color: #FFFFFF;
	background-color: #5B7FFA;
	position: absolute;
	top: -40rpx;
	left: 18%;
	border-radius: 20rpx 20rpx;
}
.center_bottom {
	width: 510rpx;
	line-height: 70rpx;
	text-align: center;
	color: #FFFFFF;
	background-color: #5B7FFA;
	position: absolute;
	bottom: -40rpx;
	left: 13%;
	border-radius: 50rpx 50rpx;
}

