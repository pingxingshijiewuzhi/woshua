
page {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.box {
	width: 100vw;
	height: 100vh;
	background-color: #F2F2F2;
	overflow: hidden;
}
.border {
	width: 100%;
	height: 300rpx;
	background-color: #FFFFFF;
	margin-top: 30rpx;
}
.list {
	width: 94%;
	height: 100rpx;
	border-bottom: solid 1rpx #E5E5E5;
	margin: 0 3%;
}
.button {
	width: 100%;
	line-height: 100rpx;
	position: absolute;
	bottom: 0;
	font-size: 32rpx;
}
.button_left {
	width: 80%;
	background-color: #FFFFFF;
	text-align: end;
	padding-right: 40rpx;
}
.button_right {
	width: 20%;
	background-color: #5A7EF8;
	color: #FFFFFF;
	text-align: center;
}
.next {
	width: 20rpx;
	height: 30rpx;
	margin-left: 30rpx;
}
.list:nth-child(3) {
	border: none;
}

