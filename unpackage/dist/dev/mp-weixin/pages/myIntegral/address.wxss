
.box {
	width: 100%;
	height: 100%;
	background-color: #F2F2F2;
	overflow: hidden;
}
.border {
	width: 100%;
	height: 600rpx;
	background-color: #FFFFFF;
	padding: 0 20rpx;
	margin-top: 20rpx;
	color: #6E6E6E;
	font-size: 30rpx;
}
.border_list {
	width: 90%;
	line-height: 100rpx;
	margin: 0 5%;
	border-bottom: solid 1rpx #E5E5E5;
}
.border_image {
	width: 20rpx;
	height: 30rpx;
}
.button {
	width: 100%;
	line-height: 120rpx;
	background-color: #5A7EF8;
	color: #FFFFFF;
	text-align: center;
	position: absolute;
	bottom: 0;
	font-size: 32rpx;
}

