
page {
	width: 100%;
	height: 100%;
	overflow: hidden;
}
.box {
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	background-color: #FFFFFF
}
.box_list {
	width: 100%;
	height: 1100rpx;
	overflow-y: scroll;
}
.barner {
	width: 92%;
	height: 264rpx;
	/* background-image: url(../../static/image/0002.png); */
	background-size: 100% 100%;
	background-repeat: no-repeat;
	overflow: hidden;
	margin: 20rpx 4%;
	border-radius: 20rpx;
	position: relative;
	box-shadow: 2px 2px 12px rgba(0, 0, 0, .1);
}
.list_name {
	line-height: 60rpx;
	font-size: 32rpx;
	padding-left: 30rpx;
}
.barner_center {
	width: 170rpx;
	line-height: 46rpx;
	font-size: 28rpx;
	letter-spacing: 2rpx;
	color: #EEE0FF;
	border-radius: 50rpx 50rpx;
	text-align: center;

	position: absolute;
	bottom: 36rpx;
	left: 160rpx;
	background-color: #572DD9;
}

